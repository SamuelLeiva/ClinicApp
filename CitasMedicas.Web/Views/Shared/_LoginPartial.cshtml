@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authentication

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="#">
                ¡Hola, @User.Claims.FirstOrDefault(u => u.Type == "name")?.Value!
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-link text-dark" asp-action="Logout" asp-controller="Auth">Cerrar Sesión</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Auth">Registrarse</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Auth">Iniciar Sesión</a>
        </li>
    }
</ul>