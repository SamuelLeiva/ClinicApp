@model List<CitasMedicas.Web.Models.Dto.DoctorDto>

@{
    ViewData["Title"] = "Médicos";
}

<h1 class="text-center my-4">Listado de Médicos</h1>

<div class="container">
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row pb-3">
        <div class="col-6">
            <h2 class="text-primary">Médicos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="DoctorCreate" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nuevo Médico</a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-dark">
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Especialidad ID</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td>@doctor.Name</td>
                        <td>@doctor.LastName</td>
                        <td>@doctor.PhoneNumber</td>
                        <td>@doctor.Email</td>
                        <td>@doctor.SpecialtyId</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="DoctorEdit" asp-route-doctorId="@doctor.DoctorId" class="btn btn-success btn-sm me-2">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>