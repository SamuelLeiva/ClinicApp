@model List<CitasMedicas.Web.Models.Dto.AppointmentDto>

@{
    ViewData["Title"] = "Citas Médicas";
    var patients = ViewBag.Patients as List<CitasMedicas.Web.Models.Dto.PatientDto>;
    var doctors = ViewBag.Doctors as List<CitasMedicas.Web.Models.Dto.DoctorDto>;
}

<h1 class="text-center my-4">Citas Médicas</h1>

<div class="container">
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12">
            <h3>Filtrar Citas</h3>
            <form asp-action="Filter" method="get">
                <div class="row">
                    <div class="col-md-5">
                        <label class="form-label">Paciente:</label>
                        <select name="patientId" class="form-select">
                            <option value="">-- Todos los pacientes --</option>
                            @if (patients != null)
                            {
                                @foreach (var patient in patients)
                                {
                                    <option value="@patient.PatientId">@patient.Name @patient.LastName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Médico:</label>
                        <select name="doctorId" class="form-select">
                            <option value="">-- Todos los médicos --</option>
                            @if (doctors != null)
                            {
                                @foreach (var doctor in doctors)
                                {
                                    <option value="@doctor.DoctorId">@doctor.Name @doctor.LastName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-info w-100">Filtrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row pb-3">
        <div class="col-6">
            <h2 class="text-primary">Citas</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="CreateAppointment" class="btn btn-primary"><i class="fas fa-plus"></i> Agendar Nueva Cita</a>
        </div>
    </div>

    <div class="container">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="table-dark">
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Paciente</th>
                    <th>Médico</th>
                    <th>Motivo</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.AppointmentDate.ToShortDateString()</td>
                            <td>@appointment.AppointmentDate.ToShortTimeString()</td>
                            <td>@appointment.PatientName</td>
                            <td>@appointment.DoctorName</td>
                            <td>@appointment.Description</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>